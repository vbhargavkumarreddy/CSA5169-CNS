#include <stdio.h>
#include <string.h>
#include <ctype.h>
void caesarEncrypt(char text[], int shift) {
    int i = 0;
    char ch;
    while (text[i] != '\0') {
        ch = text[i];

        if (isupper(ch)) {
            ch = (ch - 'A' + shift) % 26 + 'A'; 
        }
    
        else if (islower(ch)) {
            ch = (ch - 'a' + shift) % 26 + 'a'; 
        }
        text[i] = ch;
        i++;
    }
}
int main() {
    char text[100];
    int shift;
    printf("Enter a message: ");
    fgets(text, sizeof(text), stdin);
    printf("Enter shift value (1-25): ");
    scanf("%d", &shift);
    caesarEncrypt(text, shift);
    printf("Encrypted message: %s", text);


    return 0;
}
